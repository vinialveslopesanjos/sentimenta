{
    "name": "sentimenta",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        "packages/*",
        "frontend",
        "apps/mobile"
    ],
    "scripts": {
        "dev:web": "npm run dev --workspace=frontend",
        "dev:mobile": "npm run dev --workspace=@sentimenta/mobile",
        "build:web": "npm run build --workspace=frontend",
        "build:types": "npm run build --workspace=@sentimenta/types",
        "build:api-client": "npm run build --workspace=@sentimenta/api-client",
        "build:packages": "npm run build:types && npm run build:api-client",
        "type-check": "npm run type-check --workspaces --if-present"
    },
    "devDependencies": {
        "turbo": "^2.0.0"
    }
}